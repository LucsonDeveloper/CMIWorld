<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_text"
    android:orientation="vertical"
    tools:context="com.lucsoninfotech.cmi.cmiworld.Fragment.QueAnsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/what_is_the_purpose_of_this_application"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_ans"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_rounded_main_white"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@null" />

</LinearLayout>
