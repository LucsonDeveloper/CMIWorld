<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_text"
    tools:context="com.lucsoninfotech.cmi.cmiworld.Activity.UserStatusActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_development"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/txt_develope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/user_development"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/progress_exprience"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                app:arc_bottom_text_size="20dp"
                app:arc_finished_color="@color/colorAccent"
                app:arc_progress="55"
                app:arc_stroke_width="7dp"
                app:arc_suffix_text=" "
                app:arc_text_color="#ffffff"
                app:arc_unfinished_color="#ffffff" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="@string/user_experience"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
